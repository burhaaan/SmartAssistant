# CORS (allow your backend to call this server, and Anthropic to reach it if needed)
ALLOWED_ORIGIN=http://localhost:4000

# JWT from your backend (same secret)
SESSION_JWT_SECRET=replace_me

# DB MODE: sqlite | postgres
DB_DRIVER=sqlite

# For sqlite
SQLITE_PATH=./data.db

# For postgres (when you deploy remotely)
# DB_DRIVER=postgres
# DATABASE_URL=postgresql://user:pass@host:port/dbname

# QuickBooks creds (needed for refresh flow)
QB_CLIENT_ID=xxxxxxxxxxxxxxxx
QB_CLIENT_SECRET=xxxxxxxxxxxxxxxx

# QBO minor version
QB_MINOR_VERSION=75

PORT=5055
NODE_ENV=development
